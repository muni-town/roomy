{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Roomy Chat",
  "version": "0.1.0",
  "identifier": "chat.roomy.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:4173",
    "beforeDevCommand": "pnpm preview"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Roomy",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "host": "roomy.chat"
        }
      ],
      "desktop": {
        "schemes": ["chat.roomy", "roomy"]
      }
    }
  }
}
